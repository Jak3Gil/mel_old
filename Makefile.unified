	@echo ""

# Compile main
melvin_unified.o: melvin_unified.cpp
	@echo "ðŸ”¨ Compiling melvin_unified.cpp..."
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Core components
melvin/core/%.o: melvin/core/%.cpp melvin/core/%.h
	@echo "ðŸ”¨ Compiling $<..."
	$(CXX) $(CXXFLAGS) -c $< -o $@

melvin/core/atomic_graph.o: melvin/core/atomic_graph.cpp melvin/core/atomic_graph.h
